---
/**
 * Hero component usage:
 * <Hero
 *   title="I code digital crafts for humans."
 *   subtitle="I specialize in modern WordPress development and JAMStack architectures."
 *   ctaLabel="Let's talk" // optional
 *   ctaHref="/lets-talk"   // optional
 *   image={heroImage}
 *   showImage
 * />
 */
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

import Button from './Button.astro';
import animateBoxScript from '../scripts/animate-box.js?url';

interface Props {
  title: string;
  subtitle?: string;
  ctaLabel?: string;
  ctaHref?: string;
  ctaVariant?: 'outline' | 'primary';
  ctaAriaLabel?: string;
  ctaNewTab?: boolean;
  image?: ImageMetadata;
  imageAlt?: string;
  showImage?: boolean;
}

const {
  title,
  subtitle,
  ctaLabel,
  ctaHref,
  ctaVariant = 'primary',
  ctaAriaLabel,
  ctaNewTab = false,
  image,
  imageAlt,
  showImage = Boolean(image)
} = Astro.props as Props;

const displayImage = Boolean(showImage && image);
const altText = imageAlt ?? title;
const showCta = Boolean(ctaLabel && ctaHref);
---
<section class="hero">
  <div class="hero__content">
    <h1 class="entry-title">{title}</h1>
    {displayImage && image && (
      <div class="hero__media" data-hero-box>
        <Image src={image} alt={altText} class="hero__image" loading="eager" fetchpriority="high" />
      </div>
    )}
    {subtitle && <h2 class="entry-subtitle">{subtitle}</h2>}
    {showCta && (
      <Button
        label={ctaLabel!}
        href={ctaHref!}
        variant={ctaVariant}
        ariaLabel={ctaAriaLabel}
        newTab={ctaNewTab}
      />
    )}
  </div>
</section>

<style>
  .hero {
    .hero__content {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      gap: 32px;
      text-align: left;
    }

    .entry-title {
        font-size: var(--font-size-4x);
        line-height: var(--line-height-base);
        font-weight: 600;
        margin-bottom: 0;
    }

    .entry-subtitle {
        font-size: var(--font-size-2x);
        line-height: var(--line-height-base);
        font-weight: 600;
        margin-top: 0;
        margin-bottom: 0;
    }
  }

  .hero__media {
    width: 100%;
    max-width: 100%;
    height: 100%;
    min-height: 566px;
    overflow: hidden;
    transform: scale(0.4);
    transform-origin: center;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  @media (min-width: 960px) {
    .hero {
      
    }

    .hero__content {
      
    }

    .hero__media {
      flex: 1;
    }
  }
</style>

<script>
    import '../scripts/animate-box';
</script>
